.row
	.col-sm-12.col-md-6
		.panel.panel-default.panel-hovered.panel-stacked.mb20
			.panel-heading Native Controls
			.panel-body
				form.form-horizontal(role="form")
					.form-group
						label.col-md-3.control-label Normal Control
						.col-md-9
							input.form-control(type="text")
					.form-group
						label.control-label.col-md-3 With Hint
						.col-md-9
							input.form-control(type="text" placeholder="Hint Text")
							p.text-danger.text-right.xsmall hint description

					md-button(ui-sref="panel") Presioname

					div(layout layout-sm="column")
						md-input-container(flex)
							label First name
							input(type="text" ng-model="firstName")
						md-input-container(flex)
							label Last Name
							input(type="text" ng-model="theMax")
					